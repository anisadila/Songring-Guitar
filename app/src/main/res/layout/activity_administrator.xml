<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.adila.songringguitarchordtabvideo.Administrator">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Administrator Page"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="showreq"
        android:text="show request"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="add song list"
        android:onClick="addsong"
        android:layout_marginTop="10dp"/>
</LinearLayout>
